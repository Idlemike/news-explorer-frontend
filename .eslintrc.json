{
    "env": {
      "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
      "airbnb-base"
    ],
  "ignorePatterns": ["/public", "/.git", "node_modules"],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
      "spaced-comment": "off",
      "no-console": "off",
      "no-useless-escape": "off",
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-param-reassign": "off",
      "no-return-await": "off",
      "no-dynamic-require": "off",
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "class-methods-use-this": "off",
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "req|res|next|val|get|param|route|join"
        }
      ]
    }
}
